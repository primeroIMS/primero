server {
  listen <%= @http_port %>;
  <%= "server_name #{@server_name};" if @server_name %>
  rewrite ^(.*)$ https://$host:<%= @https_port %>$1 redirect;
}

server {
  listen <%= @https_port %> ssl;
  <%= "server_name #{@server_name};" if @server_name %>
  ssl_certificate <%= @ssl_cert_path %>;
  ssl_certificate_key <%= @ssl_key_path %>;

  passenger_enabled on;
  passenger_min_instances 1;
  passenger_ruby <%= @rvm_ruby_path %>;

  rails_env <%= @rails_env %>;

  passenger_set_cgi_param RAILS_LOG_PATH "<%= @rails_log_path %>";

  gzip_disable "MSIE [1-6]\.";
  root <%= @current_path %>/public;
  access_log <%= @log_path %>/server.log;
  error_log <%= @log_path %>/error.log error;
  client_max_body_size 50M;

  #Need to change this accordingly once we move to rails3.1
  location ~* ^/(assets|images|javascripts|stylesheets)/ {
    # Per RFC2616 - 1 year maximum expiry
    # http://www.w3.org/Protocols/rfc2616/rfc2616-sec14.html
    expires 1y;
    gzip_static on;
    add_header Cache-Control public;

    # Some browsers still send conditional-GET requests if there's a
    # Last-Modified header or an ETag header even if they haven't
    # reached the expiry date sent in the Expires header.
    add_header Last-Modified "";
    add_header ETag "";
    break;
  }
}

<%= "passenger_pre_start https://#{@server_name}:#{@https_port}/;" if @server_name %>
