<div class="remove_flag_record_container">
  <form accept-charset="UTF-8" action="<%=  form_unflag_action  %>" class="edit_<%=  model  %>" id="<%=  form_id  %>" method="post" autocomplete="off">
    <div style="margin:0;padding:0;display:inline">
      <input name="utf8" type="hidden" value="âœ“">
      <input name="_method" type="hidden" value="put">
      <input name="authenticity_token" type="hidden" value="<%=  authenticity_token  %>">
      <input name="flag_index" type="hidden" value="<%=  flag_index  %>">
      <input name="<%= message_id %>" type="hidden" value="<%= flag_message %>">
      <input id="<%=  model  %>_redirect_url" name="redirect_url" type="hidden" value="<%=  redirect_url  %>">
    </div>
    <div class="row collapse align-bottom">
      <div class="medium-6 columns">
        <label class="inline" for="<%= model %>_un<%= message_id %>"><%= unflag_message %></label>
        <input id="<%= model %>_un<%= message_id %>" name="un<%= message_id %>" size="30" type="text" value="" class="flag_message">
      </div>
      <div class="medium-6 columns">
        <input class="mark-as-submit button flag_submit" data-error-message="<%= submit_error_message %>" id="<%= model %>_submit" name="commit" type="submit" value="<%= unflag_submit_label %>">
      </div>
    </div>
  </form>
  <div class="clear"></div>
</div>
