<% content_for :header_sub_nav do %>
    <ul class="inline-list">
        <%= render 'show_child_toolbar', child: @child %>
    </ul>
<% end %>

<% content_for :breadcrumbs do %>
    <h2 class="float_left no_border">
        <%= link_to t("cases.label"), cases_path %> &gt; <%= text_to_identify_child(@child) %>
    </h2>
<% end %>

<% content_for :header_message do %>    
    <% if @child.flag? %>
        <div class="header_message">
        <h3 class="flag-message"><%= flag_message%></h3>
        </div>
    <% end %>
<% end %>

<div class="clearfix"></div>

<%= form_tag child_path(@child), :method => :put, :multipart => true, :class => "edit-profile default-form" do %>
  <div class="page-content-new row">
    <div class="large-4 medium-4 columns close-side-tab">
      <div class="side-tab">
        <%= render :partial => 'form_section/tabs', :object => @form_sections %>
      </div>
    </div>

    <div class="side-tab-content large-8 medium-8 columns">
      <%= hidden_field_tag('child[revision]', @child._rev) %>
      <% @form_sections.each do |form_group_name, form_list| %>
        <%= render :partial => 'form_section/form_section', :collection => form_list,  :locals => {:formObject => @child, :form_group_name => form_group_name} %>
        <% if !@child.new_record?%>
          <div id="password_confirmation_popup" title="PRIMERO" style="display:none">
            <p><%= I18n.t("cases.enter_password_to_protect_childs_name")%></p>
            <input type="password" id="confirm_password">
            <button type="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" role="button"><span class="ui-button-text"><%=(I18n.t("cases.ok"))%></span></button>
          </div>
          <div id="password_confirmation_message" title="PRIMERO" style="display:none">
            <p></p>
            <button type="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" role="button" onclick="$(this).parent().parent().hide();"><span class="ui-button-text"><%=(I18n.t("cases.ok"))%></span></button>
          </div>
        <% end %>
      <% end %>
      <div class="btn_panel">
        <%= discard_button children_path %>
        <%= submit_button %>
        <div class="clearfix"></div>
      </div>
    </div>

    <div class="hidden_params">
      <% (params["delete_child_photo"] || {}).each do |key, value| %>
        <%= hidden_field_tag "delete_child_photo[#{key}]", value %>
      <% end %>
    </div>
  </div>

<% end %>
