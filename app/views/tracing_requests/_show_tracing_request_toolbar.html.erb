<% if can? :flag, tracing_request %>
    <li>
        <div class="dropdown_btn dropdown_form">
            <%= render 'record_shared/suspect_flag', record: @tracing_request %>
        </div>
    </li>
<% end %>
<% unless ["edit", "update"].include? controller.action_name %>
<ul id="menu" class="sf-menu">
  <li class="init_btn">
    <%= link_to content_tag(:span, t("actions.button")), '#', class: 'button hollow action_btn' %>
    <ul>
        <%= render partial: 'exports/button', locals: {model: TracingRequest, instance: @tracing_request} %>
        <% if can? :export_custom, @tracing_request %>
          <%= render 'exports/custom_exports_link', model: TracingRequest, export_type: 'custom' %>
        <% end %>
        <% if can? :edit, @tracing_request %>
            <%= render partial: 'record_shared/enable_disable_record', locals: {model: TracingRequest, instance: @tracing_request}%>
        <% end %>
    </ul>
  </li>
</ul>
<% end %>